---
import App from "../App.astro";
import { Section, Image, Icon, H1, H2, H3, Card } from "ui";
---

<App title="Главная">
  <main>
    <!-- Intro -->
    <Section name="intro">
      <Fragment slot="header">
        <div class="bg-video">
          <video autoplay muted loop>
            <source src="./assets/videos/intro.mp4" type="video/mp4" />
          </video>
        </div>
      </Fragment>

      <div class="intro__content">
        <div class="top-title">СитистЭй аренда апартаментов</div>
        <H1>Выбирайте Лучшие Апартаменты</H1>
        <div class="bottom-title">
          Для долгосрочной аренды, командировки или путешествия
        </div>

        <a href="#services" class="arrow-down">
          <svg
            role="presentation"
            x="0px"
            y="0px"
            width="38.417px"
            height="18.592px"
            viewBox="0 0 38.417 18.592"
            ><g
              ><path
                d="M19.208,18.592c-0.241,0-0.483-0.087-0.673-0.261L0.327,1.74c-0.408-0.372-0.438-1.004-0.066-1.413c0.372-0.409,1.004-0.439,1.413-0.066L19.208,16.24L36.743,0.261c0.411-0.372,1.042-0.342,1.413,0.066c0.372,0.408,0.343,1.041-0.065,1.413L19.881,18.332C19.691,18.505,19.449,18.592,19.208,18.592z"
                fill="currentColor"></path></g
            ></svg
          >
        </a>
      </div>
    </Section>

    <!-- Contacts -->
    <Section name="contacts">
      <Fragment slot="header">
        <div class="bg-img">
          <Image src="contacts-bg.jpg" />
        </div>
      </Fragment>

      <div class="contacts__content">
        <H2>Контакты</H2>
        <div class="contacts__group">
          <div class="font-bold">Телефон для оформления бронирования</div>
          <a href="tel:+7925977775" title="Телефон">+7 (925) 975 77 25</a>
        </div>
        <div class="contacts__group">
          <div>Телефоны по вопросам сотрудничества:</div>
          <a href="tel:+79032685995" title="Телефон">+7 (903) 268 59 95</a>
        </div>
        <div class="contacts__group">
          <div class="font-bold">Почта</div>
          <a href="mailto:infocitystay@mail.ru" title="Почта">
            infocitystay@mail.ru
          </a>
        </div>
      </div>
    </Section>
  </main>
</App>
